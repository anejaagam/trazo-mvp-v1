{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Typecheck and run tests",
      "type": "shell",
      "command": "npm run -s typecheck && npm run -s test",
      "options": {
        "shell": {
          "executable": "/bin/bash",
          "args": ["-lc"]
        }
      },
      "problemMatcher": ["$tsc"],
      "group": "build"
    }
  ]
}