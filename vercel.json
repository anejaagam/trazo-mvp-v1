    {
      "path": "/api/cron/telemetry-poll",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/evaluate-alarms",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/advance-recipes",
      "schedule": "10 * * * *"
    },
    {
      "path": "/api/cron/aggregate-hourly",
      "schedule": "5 * * * *"
    },
    {
      "path": "/api/cron/aggregate-daily",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/aggregate-full",
